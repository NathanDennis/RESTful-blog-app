<%- include ("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%= post.title %>"</div>
    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST"> <!-- Method Override -->

        <div class="field">
            <label for="post[title]">Title</label>
            <input type="text" name="post[title]" value="<%= post.title %>" required>
        </div>

        <div class="field">
            <label for="post[image]">Image URL</label>
            <input type="text" name="post[image]" value="<%= post.image %>">
        </div>

        <div class="field">
            <label for="post[body]">Post Content</label>
            <textarea name="post[body]" required><%= post.body %></textarea>
        </div>

        <input class="ui primary button" type="submit">
    </form>
</div>

<%- include ("partials/footer") %>