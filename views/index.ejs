<%- include ("partials/header") %>

<h1>All Posts</h1>

<% posts.forEach((post) => { %>
    <div>
        <h2><%= post.title %></h2>
        <img src="<%= post.image %>" alt="">
        <span><%= post.createdAt %></span>
        <p><%- post.body.substring(0, 100) %>...</p>
        <a href="/posts/<%=post._id%>">Read more</a>
    </div>
<% }) %>

<%- include ("partials/footer") %>